<body style="background-color:lightgrey">
<div class="container p-3 my-3 border">

<%= form_for(@student_detail) do |f| %>
 <% if @student_detail.errors.any? %>
    <% @student_detail.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  <% end %>
 
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name , required: true%>
  </div><br>
	<div class="field">
    <%= f.label :usn %><br />
    <%= f.text_field :usn , required: true %>
  </div>
  <div class="field">
    <%= f.label :gender %><br />
    <%= f.select :gender, [["select Gender", ""], ["Male", "male"],["Female","female"]],required: true %>
  </div><br>
	<div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address, required: true %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
</div>
<% end %>
<title>student app</title>
<h1 style='text-align:center'>STUDENT INFORMATION</h1>
<body style='margin:  30px auto;
    background-color:lightgrey;
    width: 50%;
    border: 2px solid black;
    padding: 10px 40px 30px;'>
<div style ='text-align:center'>

<table class="table table-striped" style="text-align:center">
    <thead>
    <th>Name</th><br>
    <th>Age</th>
    <th>Address</th>
    <th>Gender</th>
    </thead>
    <% @students.each do |student| %>
    <tr>
        <td><%= student.name %></td>
        <td><%= student.age %></td>
        <td><%= student.address %></td>
        <td><%= student.gender %></td>
        <td>
         <%= link_to "Edit", edit_student_path(student) %>
         
         <%= link_to "Delete", student, method: :delete, data: {confirm: "Are you sure you want to delete?"} %>
        </td>
        </tr>
        
    <% end %>
    </table><br>
</div>
    <%= link_to "Create", new_student_path %><br>
    <%= link_to "Semester",new_semester_path %><br>
    
</body>